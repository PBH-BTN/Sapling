<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghostchu.tracker.sapling.mapper.WidgetsMapper">
    <select id="selectWidgetsByIdForUpdate" parameterType="map"
            resultType="com.ghostchu.tracker.sapling.entity.Widgets">
        SELECT *
        FROM widgets
        WHERE id = #{id} FOR UPDATE
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghostchu.tracker.sapling.mapper.UserBalancesMapper">
    <select id="selectUserBalanceForUpdate" parameterType="map"
            resultType="com.ghostchu.tracker.sapling.entity.UserBalances">
        SELECT *
        FROM user_balances
        WHERE id = #{id} FOR UPDATE
    </select>
    <select id="selectUserBalancesForUpdate" parameterType="map"
            resultType="com.ghostchu.tracker.sapling.entity.UserBalances">
        SELECT *
        FROM user_balances
        WHERE owner = #{id}
          AND currency = #{currency} FOR UPDATE
    </select>
</mapper>
